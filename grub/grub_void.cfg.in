
set pager="1"
set locale_dir="(${voidlive})/boot/grub/locale"

if [ -e "${prefix}/${grub_cpu}-${grub_platform}/all_video.mod" ]; then
    insmod all_video
else
    insmod efi_gop
    insmod efi_uga
    insmod video_bochs
    insmod video_cirrus
fi

insmod font

if loadfont "(${voidlive})/boot/grub/fonts/unicode.pf2" ; then
    insmod gfxterm
    set gfxmode="auto"
    
    terminal_input console
    terminal_output gfxterm

    insmod gfxmen
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/dejavu_sans_12.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/dejavu_sans_14.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/dejavu_sans_16.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/dejavu_sans_24.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/dejavu_sans_32.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/dejavu_sans_48.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/terminus-12.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/terminus-14.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/terminus-16.pf2
    loadfont (${voidlive}/usr/share/grub/themes/Graphite/terminus-18.pf2

    insmod jpeg
    insmod png

    set theme=(${voidlive})/usr/share/grub/themes/Graphite/theme.txt
    export theme
fi

if [ cpuid -l ]; then
    menuentry "@@BOOT_TITLE@@ @@KERNVER@@ (@@ARCH@@)" {
        set gfxpayload="keep"
        linux (${voidlive})/boot/vmlinuz \
		root=live:CDLABEL=VOID_LIVE ro init=/sbin/init \
		rd.luks=0 rd.md=0 rd.dm=0 loglevel=4 gpt add_efi_memmap \
		vconsole.unicode=1 vconsole.keymap=@@KEYMAP@@ \
		locale.LANG=@@LOCALE@@ @@BOOT_CMDLINE@@
        initrd (${voidlive})/boot/initrd
    }
    menuentry "@@BOOT_TITLE@@ @@KERNVER@@ (@@ARCH@@) (RAM)" {
        set gfxpayload="keep"
        linux (${voidlive})/boot/vmlinuz \
		root=live:CDLABEL=VOID_LIVE ro init=/sbin/init \
		rd.luks=0 rd.md=0 rd.dm=0 loglevel=4 gpt add_efi_memmap \
		vconsole.unicode=1 vconsole.keymap=@@KEYMAP@@ \
		locale.LANG=@@LOCALE@@ @@BOOT_CMDLINE@@ rd.live.ram
        initrd (${voidlive})/boot/initrd
    }
fi
